<?xml version="1.0" encoding="utf-8"?>
<com.honhai.foxconn.fxccalendar.views.add.item.color.ColorItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/eventItemHeight">

    <ImageView
        android:id="@+id/colorImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/color_picker"
        android:scaleType="center"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/colorText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:text="color"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/colorImage"
        app:layout_constraintRight_toLeftOf="@id/colorIndicator"/>

    <ImageView
        android:id="@+id/colorIndicator"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/indicator"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="parent"/>

</com.honhai.foxconn.fxccalendar.views.add.item.color.ColorItem>